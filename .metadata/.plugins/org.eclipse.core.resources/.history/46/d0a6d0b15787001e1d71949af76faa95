package com.bridgelabz;

public class Program 
{

	public static void main(String[] args) 
	{
		int green=1;
		int red=2;
		int signal=0;
		
		if(signal== green)
		{
			System.out.println("Train will Run");
		}
		
		else if(signal== red)
		{
			System.out.println("Train will Not Run");
		}
		
		else
		{
			System.out.println("Wrong Signal");
		}

	}

}
